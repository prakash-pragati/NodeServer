{
  "compilerOptions": {
    "noImplicitAny": false,
    "allowSyntheticDefaultImports" : true,
    "resolveJsonModule": true,
    "target": "es2018",                          
    "module": "esnext",
    "moduleResolution": "node",                     
    "noEmitOnError": true,
    "lib": ["es2017","dom"],                            
    "strict": true,  
    "esModuleInterop": false,                 
    "outDir": "out-tsc",
    "rootDir": "./",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
  }
  ,
  "include": ["./src/**/*.ts"]
}
